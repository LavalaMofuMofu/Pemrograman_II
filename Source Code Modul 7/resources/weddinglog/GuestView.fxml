<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="weddinglog.GuestController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Nama Tamu:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Alamat:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Kategori:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="cmbCategory" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button onAction="#handleAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Tambah" />
        <Button onAction="#handleUpdate" text="Edit" />
        <Button onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Hapus" />
        <Button onAction="#handleClear" text="Clear Form" />
    </HBox>

    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="150" text="Nama" />
            <TableColumn fx:id="colAddress" prefWidth="150" text="Alamat" />
            <TableColumn fx:id="colCategory" prefWidth="100" text="Kategori" />
        </columns>
    </TableView>

</VBox>
